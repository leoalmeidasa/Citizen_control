<p id="notice"><%= notice %></p>

<h1>Addresses</h1>

<table>
  <thead>
    <tr>
      <th>Cep</th>
      <th>Public place</th>
      <th>Complement</th>
      <th>District</th>
      <th>City</th>
      <th>Uf</th>
      <th>Ibge code</th>
      <th>Citizen</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each do |address| %>
      <tr>
        <td><%= address.CEP %></td>
        <td><%= address.public_place %></td>
        <td><%= address.complement %></td>
        <td><%= address.district %></td>
        <td><%= address.city %></td>
        <td><%= address.UF %></td>
        <td><%= address.IBGE_code %></td>
        <td><%= address.citizen_id %></td>
        <td><%= link_to 'Show', address %></td>
        <td><%= link_to 'Edit', edit_address_path(address) %></td>
        <td><%= link_to 'Destroy', address, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

